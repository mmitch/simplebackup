[Unit]
Description=Create a simple system backup
Documentation=man:simplebackup(1) man:simplebackup.conf(5)
Wants=simplebackup.timer

[Service]
Type=oneshot
ExecStart=/usr/bin/simplebackup /etc/simplebackup.conf

IOSchedulingPriority=6
CPUSchedulingPolicy=batch
Nice=16

[Install]
WantedBy=multi-user.target
