[Unit]
Description=Create a simple backup for user %I every week
Documentation=man:simplebackup(1) man:simplebackup.conf(5)
Requires=simplebackup@%i.service

[Timer]
Unit=simplebackup@%i.service
OnCalendar=Sat *-*-* 02:00:00
RandomizedDelaySec=3 hour
FixedRandomDelay=true

[Install]
WantedBy=timers.target
